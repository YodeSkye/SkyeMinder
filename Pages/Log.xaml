<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SkyeMinder.Pages"
             xmlns:models="clr-namespace:SkyeMinder.Models"
             x:Class="SkyeMinder.Pages.Log"
             x:DataType="local:Log"
             Title="Log">

    <CollectionView x:Name="logView"
                    ItemsSource="{Binding entries}"
                    Margin="20">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:BloodSugarEntry">
                <Border Padding="10" Margin="5" BackgroundColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="{Binding Timestamp, StringFormat='{0:MMM d, yyyy h:mm tt}'}" FontSize="12" />
                        <Label Text="{Binding Value}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{Binding Value, Converter={StaticResource ThresholdColorConverter}}" />
                        <Label Text="{Binding Notes}" FontSize="14" />
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>