<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkyeMinder.Pages.Settings"
             Title="Settings">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Blood Sugar Thresholds" FontSize="22" />

        <HorizontalStackLayout Spacing="10">
            <Label Text="Low:" VerticalOptions="Center" />
            <Entry x:Name="LowEntry"
                   Keyboard="Numeric"
                   WidthRequest="100"
                   TextChanged="OnLowChanged" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="10">
            <Label Text="High:" VerticalOptions="Center" />
            <Entry x:Name="HighEntry"
                   Keyboard="Numeric"
                   WidthRequest="100"
                   TextChanged="OnHighChanged" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>