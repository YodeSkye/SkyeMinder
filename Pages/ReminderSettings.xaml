<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SkyeMinder.Models"
             x:Class="SkyeMinder.Pages.ReminderSettings"
             Title="Reminder Settings">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Choose a time to be reminded:" FontSize="18" />
        <TimePicker x:Name="timePicker" Margin="0,-20,0,0" FontSize="24"/>

        <Button Text="Add Reminder" Padding="20" Margin="0,20,0,0" FontSize="18" Clicked="AddReminder_Clicked" />

        <Label Text="Your Reminders:" FontSize="18" Margin="0,20,0,0" />
        <CollectionView x:Name="reminderListView"
                EmptyView="No reminders yet. Add one above!">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ReminderTime">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding TimeOfDay, StringFormat='{0:hh\\:mm tt}'}" FontSize="16" />
                        <Button Text="Delete"
                        Grid.Column="1"
                        CommandParameter="{Binding Id}"
                        Clicked="DeleteReminder_Clicked"
                        BackgroundColor="Red"
                        TextColor="White" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>